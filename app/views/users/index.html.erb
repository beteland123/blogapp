<h1>Welcome to all users</h1>
<div class='sign_in_user_bar'>
      <% unless user_signed_in? %>
        <div class="user-sign-in-link">
          <%= link_to 'Sign in', new_user_session_path, method: :delete %>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <div class="user-sign-in-link">
          <%= link_to 'Sign out', custom_destroy_user_session_path, method: :delete %>
        </div>
      <% end %>
</div>

<div class="index_user">
  <% @users.each do |user| %>
    <div class="each_user">
       <div class="img">
         <img src="<%= user.photo %>" alt="user image">
       </div>
       <div class="user">
       <h2><%= link_to user.name, user_path(user) %></h2>
       <p>Number of posts : <%= link_to user.postcounter, user_path(user) %></p>
      </div>
    </div>
    
  <% end %>
</div>
