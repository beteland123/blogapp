<div class="w-full sm:w-full border border-gray-300 rounded-lg shadow-xl text-slate-600 p-4 supports-backdrop-blur:bg-white/60">
<h1>All posts with their comments </h1>
<div>
   <div class="each_user">
       <div class="img">
           <img src="<%= @user.photo %>" alt="user image">
        </div>
       <div class="user">
           <h2><%= @user.name %></h2>
           <p>Number of posts : <%= @user.postcounter %></p>
        </div>
   </div>
   <% @posts.each do |post| %>
    <div class="each_post">
      <div class="post">
        <%= link_to user_post_path(@user, post) do %>
          <h5>Post # <%= post.id %></h5>
          <p><%= post.title %></p>
          <p><%= post.text %></p>
          <% if can?(:destroy, post) %>
           <%= button_to "Delete Post", user_post_path(@user, post), method: :delete, data: { confirm: "Are you sure?" } %>
           <% end %>
          <p class="coment_like"> Comments: <%= post.commentscounter %> , Likes : <%= post.likescounter %> </p>
        <% end %>
      </div>
      <div class="comment">
        <ul>
          <% post.recent_comments.each do |comment| %>
            <li><strong><%= comment.author.name %> :  </strong> <%= comment.text %>  # <%= comment.id %>
            <% if can? :destroy, comment %>
            <%= button_to "Delete Comment", user_post_comment_path(@user, post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
           <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="coment_like">
        <%= link_to " 💭", new_user_post_comment_path(@user, post) %>
        <%= button_to "❤️", user_post_likes_path(@user, post_id: post.id) %>
      </div>
    </div>
  <% end %>
     
  <%= link_to new_user_post_path(@user), class: "ml-6 bg-slate-100   hover:bg-gradient-to-r from-pink-500 to-slate-50 p-4 rounded-lg scale-50 hover:scale-75 duration-500" do %>
    New Post
  <% end %>
     <div class="flex justify-center mt-6">
     <%= link_to "Pagination", user_path(@user), class: "button" %>
   </div>
   
  
</div>
</div>