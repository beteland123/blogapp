<h1>welcome to all posts of user</h1>
<div>
   <div class="user">
      <img src="<%= @user.photo %>" alt="user image">
       <h2><%= @user.name %></h2>
       <p>Number of posts : <%= @user.postcounter %></p>
   </div>
   <div>
      <div>
         <% @posts.each do |post| %>
            <div >
               <h5>Post # <%= post.id %></h5>
                <p><%= post.title %></p>
                <p> Comments :  <%= post.commentscounter %></p>
                <p>Likes : <%= post.likescounter %></p>
            </div>
            <div>
                 <ul>
                     <% if post.comments.any? %>
                     <% post.comments.each do |comment| %>
                     <li><strong><%= comment.author.name %>:</strong> <%= comment.text %></li>
                     <% end %>
                     <% else %>
                         <li>No comments yet</li>
                     <% end %>
                </ul>
            </div>
       </div>
      <% end %>
     </div>
  </div>

</div>