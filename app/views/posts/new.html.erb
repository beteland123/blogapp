<div class="max-w-lg w-full bg-white sm:w-full border border-gray-300 rounded-lg shadow-xl text-slate-600 p-4 supports-backdrop-blur:bg-white/60">
  <h1 class="text-2xl font-bold mb-4">New Post</h1>
  <div class="container">
    <%= form_with model: @post, url: user_posts_path(@user.id), method: :post, local: true, scope: post do |f| %>
      <div class="mb-4">
        <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
        <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :text, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
        <%= f.text_field :text, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Create post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
