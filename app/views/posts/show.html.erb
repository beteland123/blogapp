<h1>Post Details</h1>
<div class="each_post">
  <div class="post">
    <div>
      <h2><%= @post.title %> By <%= @user.name %></h2>
      <p class="coment_like">Comments: <%= @post.commentscounter %>, Likes: <%= @post.likescounter %></p>
    </div>
    <p><%= @post.text %></p>
    <% if can?(:destroy, @post) %>
    <%= button_to "Delete Post", user_post_path(@user, @post), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  </div>

  <ul class="comment">
    <% if @post.comments.any? %>
      <% @post.comments.each do |comment| %>
        <li>
          <strong><%= comment.author.name %>:</strong> <%= comment.text %> # <%= comment.id %>
          <% if can? :destroy, comment %>
            <%= button_to "Delete Comment", user_post_comment_path(@user, @post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
          <% end %>
        </li>
      <% end %>
    <% else %>
      <li>No comments yet</li>
    <% end %>
  </ul>
</div>
