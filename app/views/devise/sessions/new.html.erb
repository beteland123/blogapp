<div class="sm:w-full w-full max-w-lg border border-gray-300 rounded-lg shadow-xl text-slate-600 p-4">
  <h2 class="text-xl font-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full p-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "w-full p-2 border rounded-md" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: "w-full bg-blue-300 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
