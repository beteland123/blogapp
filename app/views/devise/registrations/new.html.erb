<div class="sm:w-full w-full max-w-lg border border-gray-300 rounded-lg shadow-xl text-slate-600 p-4 mt-4">
  <h2 class="text-xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full p-2 border rounded-md" %>
    </div>
    
    <div class="mb-4">
      <%= f.text_field :name, autocomplete: "name", placeholder: "Name", class: "w-full p-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full p-2 border rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "w-full p-2 border rounded-md" %>
    </div>

    <div class="mb-4 rounded-md border border-gray-300 overflow-hidden">
      <label for="photo" class="block text-sm font-bold mb-2 txt-slate-500 p-2">Profile Photo</label>
      <%= f.file_field :photo, class: "w-full p-2" %>
      </div>

  

    <div class="mb-4">
      <%= f.text_area :bio, placeholder: "Short Bio", class: "w-full p-2 border rounded-md", rows: 3 %>
    </div>

    <div class="mt-4">
      <%= f.submit "Sign up", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
